<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALORIE CALCULATOR"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="34sp" />

    <RadioGroup
        android:id="@+id/radioGroupPatty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Burger Type :"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioChicken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioBeef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beef"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioVeggie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veggie"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sides :"
            android:textSize="20sp" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/checkCheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cheese"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBacon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bacon"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkAvocado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avacado"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sauce Quantity (Cal per 10g) :"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/seekBarSauce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Calories : "
        android:textAlignment="center"
        android:textSize="20sp" />

</LinearLayout>